<div>

<%= link_to 'Applicants', applicants_path %> &gt;
<%= link_to Applicant.find(params[:id]).full_name, {:controller=>"applicants",:action=>"show",:id=>params[:id]}%>
&gt; Payment Plan

      </div>
<br/>

<h1 class="red">Payment Plans </h1>
<span class="help"> (Add or delete playment plans for the applicant)</span>


<table >


  <% @payment_plans.each do |p| %>
    <tr>

      <td width="200px"><%= p.detail  %></td>
      <td>
        <%= link_to 'del', p, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<span style="color: red"><%=flash[:error]%></span>
<table>
  <tr>
    <td><%= render 'form' %></td>
    <td>&nbsp;&nbsp; <%= link_to 'back', {:controller=>"applicants",:action=>"show",:id=>params[:id]} %></td>
  </tr>
</table>